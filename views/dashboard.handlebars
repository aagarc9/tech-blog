<section>
  <h2>Create New Post</h2>

  <form class="new-post-form m-3">
    <div>
      <label for="post-title">Title</label>
      <input type="text" id="post-title" name="post-title" />
    </div>
    <div>
      <label for="post-content">Content</label>
      <input id="post-content" name="post-content" />
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
  </form>
</section>

{{#if posts.length}}
<section>
  <h2>Your Posts</h2>
  <ul style="list-style-type: none;">
    {{#each posts as |post|}}
    <li>
      {{> post-info post}}
      <a href="/dashboard/edit/{{post.id}}" class="edit-link btn btn-primary m-3">Edit post</a>
    </li>
    {{/each}}
  </ul>
</section>
{{/if}}

<script src="/js/add-post.js"></script>